<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".TrackerActivity">


    <ScrollView
        android:layout_width="409dp"
        android:layout_height="912dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tracker_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tracker_heading"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/dark_red"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="42dp" />

            <TextView
                android:id="@+id/period_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/period_text"
                android:textColor="@color/darkest_red"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageButton
                        android:id="@+id/period_yes_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/tick_white"/>

                    <ImageButton
                        android:id="@+id/period_no_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/cross_white"                        />
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/sympton_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sympton_text"
                android:textColor="@color/darkest_red"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageButton
                        android:id="@+id/no_symptons_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/cross_white"/>

                    <ImageButton
                        android:id="@+id/colicos_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/colicos"/>

                    <ImageButton
                        android:id="@+id/ovulacion_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/ovulos"/>

                    <ImageButton
                        android:id="@+id/sensibilidad_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/boobs"/>

                    <ImageButton
                        android:id="@+id/headache_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/headache"/>

                    <ImageButton
                        android:id="@+id/nauseas_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/nauseas"/>

                    <ImageButton
                        android:id="@+id/lumbares_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/lumbar"/>

                    <ImageButton
                        android:id="@+id/piernas_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/leg"/>

                    <ImageButton
                        android:id="@+id/articulaciones_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/articulacion"/>

                    <ImageButton
                        android:id="@+id/vulvar_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/vulva"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/secrecion_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/secrecion_text"
                android:textColor="@color/darkest_red"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                    <ImageButton
                        android:id="@+id/blanco_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/white"/>

                    <ImageButton
                        android:id="@+id/amarillo_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/yellow"/>

                    <ImageButton
                        android:id="@+id/transparente_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/gray"/>
                    <ImageButton
                        android:id="@+id/verde_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/green"/>
                    <ImageButton
                        android:id="@+id/marron_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/brown"/>

                    <ImageButton
                        android:id="@+id/seco_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/dry"/>

                    <ImageButton
                        android:id="@+id/humedo_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/wet"/>

                    <ImageButton
                        android:id="@+id/pegajoso_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/sticky"/>

                    <ImageButton
                        android:id="@+id/cremoso_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/cremoso"/>

                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/deseo_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deseo_text"
                android:textColor="@color/darkest_red"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                    <Button
                        android:id="@+id/bajo_btn"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="@string/bajo"/>

                    <Button
                        android:id="@+id/medio_btn"
                        android:layout_width="85dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="@string/medio"/>

                    <Button
                        android:id="@+id/alto_btn"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="@string/alto"/>

                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/cantidad_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cantidad_text"
                android:textColor="@color/darkest_red"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                    <Button
                        android:id="@+id/ligero_btn"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="@string/ligero"/>

                    <Button
                        android:id="@+id/moderado_btn"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="@string/moderado"/>

                    <Button
                        android:id="@+id/fuerte_btn"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="@string/fuerte"/>
                    <Button
                        android:id="@+id/intenso_btn"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="@string/intenso"/>

                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/manchado_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manchado_text"
                android:textColor="@color/darkest_red"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                    <ImageButton
                        android:id="@+id/rojo_manchado_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/red"/>

                    <ImageButton
                        android:id="@+id/marron_manchado_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/brown"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/bienestar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bienestar_text"
                android:textColor="@color/darkest_red"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="1"/>

                    <Button
                        android:id="@+id/btn_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="2"/>

                    <Button
                        android:id="@+id/btn_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="3"/>

                    <Button
                        android:id="@+id/btn_4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="4"/>

                    <Button
                        android:id="@+id/btn_5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        android:text="5"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/spm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/spm_text"
                android:textColor="@color/darkest_red"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                    <ImageButton
                        android:id="@+id/spm_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/pink"
                        app:srcCompat="@drawable/spm"/>
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/save_btn"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="@string/save_btn" />
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        app:itemBackground="@color/pink"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>